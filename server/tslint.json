{
	"rules": {
		"file-header": [
			true,
			"@license[\\s\\S]*?Copyright\\s+\\(c\\)\\s+\\d{4},\\s+IBM"
		],
		"no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"no-unnecessary-class": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": true
	},
	"defaultSeverity": "error",
	"linterOptions": {
		"exclude": [
			"**/QasmParser.ts",
			"**/QasmLexer.ts",
			"**/QasmParserListener.ts",
			"**/QasmParserVisitor.ts",
			"**/Python3Lexer.ts",
			"**/Python3Parser.ts",
			"**/Python3Listener.ts",
			"**/Python3Visitor.ts"
		]
	}
}