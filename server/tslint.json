{
	"rules": {
		"no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": true
	},
    "defaultSeverity": "warning",
    "linterOptions": {
        "exclude": ["**/QasmParser.ts", "**/Python3Lexer.ts", "**/Python3Parser.ts"]
    }
}