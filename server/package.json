{
	"name": "qiskit-vscode",
	"description": "Simplifying Qiskit to make developing quantum circuits and applications faster",
	"author": "IBM Research",
	"license": "Apache-2.0",
	"licenses": [
		{
			"type": "Apache-2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0"
		}
	],
	"publisher": "IBM Research",
	"version": "0.2.2",
	"engines": {
		"node": "*"
	},
	"repository": {
		"type": "git",
		"url": "https://github.ibm.com/IBMQuantum/qiskit-studio"
	},
	"dependencies": {
		"vscode-languageserver": "^3.5.0",
		"antlr4ts": "^0.4.1-alpha.0",
		"antlr4-c3": "^1.1.7",
		"typescript": "^2.7.2",
		"winston": "^3.0.0-rc6"
	},
	"devDependencies": {
		"@types/chai": "^4.1.1",
		"@types/mocha": "^2.2.48",
		"@types/sinon": "^4.3.1",
		"@types/sinon-chai": "^2.7.29",
		"antlr4ts-cli": "^0.4.0-alpha.4",
		"chai": "^4.1.1",
		"husky": "^0.14.3",
		"lint-staged": "^7.1.2",
		"mocha": "^5.2.0",
		"prettier": "^1.12.1",
		"sinon": "^4.5.0",
		"sinon-chai": "^3.0.0",
		"ts-mockito": "^2.3.0",
		"tslint": "^5.9.1",
		"npm-run-all": "^4.1.3"
	},
	"scripts": {
		"installServer": "npm run compile:parser && installServerIntoExtension ../client ./package.json ./tsconfig.json && npm run installQuantumLibraries && npm run installQiskitLibraries",
		"compile": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc -p .",
		"watch": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc -w -p .",
		"compile:parser": "npm-run-all -s compile:qasmParser compile:qiskitParser",
		"compile:qasmParser": "cd src/qasm/antlr && antlr4ts -visitor QasmLexer.g4 QasmParser.g4 && cd ../../..",
		"compile:qiskitParser": "cd src/qiskit/antlr && antlr4ts -visitor Python3.g4 && cd ../../..",
		"installQuantumLibraries": "mkdir -p ../client/server/qasm/libs && cp -Rv src/qasm/libs ../client/server/qasm/",
		"installQiskitLibraries": "mkdir -p ../client/server/qiskit/libs && cp -Rv src/qiskit/libs ../client/server/qiskit/",
		"pretest": "npm-run-all -s clean:generated compile:tests link:qasmLibs link:qiskitLibs",
		"compile:tests": "tsc test/*.test.ts --outDir out --module commonjs --target ES6 --experimentalDecorators",
		"link:qasmLibs": "cp -Rv src/qasm/libs out/src/qasm/",
		"link:qiskitLibs": "cp -Rv src/qiskit/libs out/src/qiskit/",
		"test": "mocha out/test --recursive",
		"clean": "npm-run-all -p clean:**",
		"clean:deps": "rm -rf node_modules",
		"clean:generated": "rm -rf out",
		"lint": "lint-staged && tslint -c tslint.json 'src/**/*.ts' && tslint -c tslint.test.json 'test/**/*.ts'"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"prettier --write",
			"git add"
		]
	}
}
